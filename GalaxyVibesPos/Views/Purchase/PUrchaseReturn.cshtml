    @section scripts{
        <script type="text/javascript">

            $("#SearchBtn").click(function () {
                var tr;
                var select = $("table tbody tr");
                select.empty();
                var invoice = $("#InvoiceNo").val();
                $.ajax({
                    type: "Post",
                    url: "/Purchase/GetPurchaseListbyInvoiceNo",
                    dataType: 'json',
                    data: { Data: invoice },

                    success: function (result) {


                        for(i=0;i<result.length;i++)
                        {
                            tr = tr + "<tr>";
                            tr = tr + "<td>" + result[i].Code + "</td>";
                            tr = tr + "<td>" + result[i].ID + "</td>";
                            tr = tr + "<td>" + result[i].Name + "</td>";
                            tr = tr + "<td>" + result[i].Price + "</td>";
                            tr = tr + "<td>" + result[i].Quantity + "</td>";
                            tr = tr + "<td>" + result[i].Total + "</td>";
       
                            tr = tr + "<td><button type=button class='btn btn-success' onclick=edit("+result[i].Code,this+")>Edit</button></td>";
                            tr = tr + "</tr>";

                        }

                        $(".table").append(tr);

                    },


                });
            });
            
        </script>

    }
    <script type="text/javascript">
        function edit(Code, num) {

            $.ajax({

                url: '/Purchase/GetDataForPurchaseReturn',
                data: { PurchaseId: Code },
                type: "post",
                cache: false,
                success: function (response) {

                    $("#Code").val(response.purchaseNo);
                    $("#ProductName").val(response.productName);
                    $("#ProductPrice").val(response.productPrice);
                    $("#ProductQty").val(response.productQty);
                                      
                },

            });

        }
    </script>