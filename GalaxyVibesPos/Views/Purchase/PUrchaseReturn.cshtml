                        @using (Html.BeginForm())
                        {

                            <div class="form-horizontal">

                                <fieldset id="form">
                                    <div class="col-lg-4 col-md-4">
                                        <input data-val="true" id="PurchaseProductID" name="PurchaseProductID" type="hidden">
                                        <div class="control-group">

                                            <label class="control-label span12" id="levelWidth">Code</label>
                                            <div class="controls" id="inputMargin">
                                                <input type="text" id="Code" name="PurchaseID" class="span12" />

                                            </div>

                                        </div>
                                        <div class="control-group">

                                            <label class="control-label span12" id="levelWidth">Name</label>
                                            <div class="controls" id="inputMargin">
                                                <input type="text" id="ProductName" name="PurchaseName" class="span12" />

                                            </div>

                                        </div>

                                        <div class="control-group">

                                            <label class="control-label span12" id="levelWidth">Price</label>
                                            <div class="controls" id="inputMargin">
                                                <input type="text" id="ProductPrice" name="PurchaseProductPrice" class="span12" />

                                            </div>

                                        </div>
                                        <div class="control-group">

                                            <label class="control-label span12" id="levelWidth">Return Quantity</label>
                                            <div class="controls" id="inputMargin">
                                                <input type="text" id="ProductQty" name="PurchaseReturnQty" class="span12" />

                                            </div>

                                        </div>

                                    </div>

                                    <div class="form-control">
                                        <button type="submit" id="ReturnBtn" class="btn btn-success" style="margin:13px; width:120px; height:35px;font-size:25px; font-weight:bold;">Return</button>
