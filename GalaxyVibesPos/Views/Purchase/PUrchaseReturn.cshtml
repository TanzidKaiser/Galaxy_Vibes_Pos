                                    <hr />
                                </fieldset>
                            </div>
                        }
                    </div>
                    @if (ViewBag.Msg == 1)
                    {
                        <div class="alert alert-success alert-block">
                            <a class="close" data-dismiss="alert" href="#">×</a>
                            <h4 class="alert-heading">Success!</h4>
                            <h5>Save Success</h5>
                        </div>
                    }
                    @if (ViewBag.Msg == 0)
                    {
                        <div class="alert alert-error alert-block">
                            <a class="close" data-dismiss="alert" href="#">×</a>
                            <h4 class="alert-heading">Success!</h4>
                            <h5> Some Exception Here, Please try again ! </h5>
                        </div>
                    }

                </div>

            </div>

        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span11">
                <div class="widget-box">
                    <div class="widget-content nopadding">

                        <div class="widget-content">

                            <div class="row-fluid">
                                <div class="span7">

                                    <div class="control-group">

                                        <label class="control-label span6" id="levelWidth">Invoice No :</label>
                                        <div class="controls" id="inputMargin">
                                            <input type="text" class="span6" id="InvoiceNo" />

                                        </div>

                                    </div>
                                    <div class="form-control">
                                        <button type="button" id="SearchBtn" class="btn btn-success span4" style="margin-left:0px; margin-top:7px; width:120px; height:35px;font-size:25px; font-weight:bold;">Search</button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section scripts{
        @Scripts.Render("~/bundles/jqueryval")
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>

        <script type="text/javascript">

            $("#SearchBtn").click(function () {
                var tr;
                var select = $("table tbody tr");
                select.empty();
                var invoice = $("#InvoiceNo").val();
                $.ajax({
                    type: "Post",
                    url: "/Purchase/GetPurchaseListbyInvoiceNo",
                    dataType: 'json',
                    data: { Data: invoice },

                    success: function (result) {


                        for (i = 0; i < result.length; i++) {
                            tr = tr + "<tr>";
                            tr = tr + "<td>" + result[i].Code + "</td>";
                            tr = tr + "<td>" + result[i].ID + "</td>";
                            tr = tr + "<td>" + result[i].Name + "</td>";
                            tr = tr + "<td>" + result[i].Price + "</td>";
                            tr = tr + "<td>" + result[i].Quantity + "</td>";
                            tr = tr + "<td>" + result[i].Total + "</td>";

                            tr = tr + "<td>" + '<button type=button id=editBtn class=btn btn-info btn-lg ><i class="icon-edit"></i></button>' + "</td>";
                            tr = tr + "</tr>";

                        }

                        $(".table").append(tr);

                    },


                });
            });

        </script>

        <script>
            $(document).ready(function () {

                var List = [];
                $(document).on('click', '#editBtn', function (e) {
                    List = [];
                    $(this).parent().siblings('td').each(function () {

                        List.push($(this).text());
                    })

                    for (i = 0; i < List.length; i++) {
                        if (i == 0) {
                            $("#Code").val(List[i]);
                        }
                        if (i == 1)
                        {
                            $("#PurchaseProductID").val(List[i]);
                        }
                        if (i == 2) {
                            $("#ProductName").val(List[i]);
                        }
                        if (i == 3) {
                            $("#ProductPrice").val(List[i]);
                        }
                    };
                });

            })
        </script>
        <script type="text/javascript">

            $(document).ready(function () {

                window.setTimeout(function () {
                    $(".alert").fadeTo(1000, 0).slideUp(1000, function () {
                        $(this).remove();
                    });
                }, 3000);

            });
        </script>

    }
