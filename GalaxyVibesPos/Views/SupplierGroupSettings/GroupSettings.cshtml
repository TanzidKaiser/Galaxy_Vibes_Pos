@model GalaxyVibesPos.Models.ViewBag.GroupViewModel
@{
    ViewBag.Title = "SupplierGroupSettings";
    Layout = "~/Views/Shared/_mytemplate.cshtml";
}

<div id="content">

    <div id="content-header">
        <div id="breadcrumb">
            <a href="index.html" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="#" class="tip-bottom">Form elements</a> <a href="#" class="current">Item</a>
        </div>

        <h1>Item Sattings</h1>


    </div>>
    <div class="container-fluid">
        <br />
        <br />
        <hr />

        <div class="row-fluid">
            <div class="span6">
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"> <i class="icon-align-justify"></i> </span>
                        <ul class="nav nav-tabs">
                            <li class="active">
                                <a href="#Group" data-toggle="tab">Add Group</a>
                            </li>

                            <li>
                                <a href="#Company" data-toggle="tab">Add Company</a>
                            </li>

                        </ul>
                    </div>
                    <div class="tab-content">


                        <div id="Group" class="tab-pane active">
                            <div class="widget-content nopadding">

                                <form class="form-horizontal">

                                    <fieldset id="GroupSubmitForm">
                                        <div class="control-group">
                                            <br />
                                            <label class="control-label">Add Group</label>
                                            <div class="controls">
                                                <input type="text" id="GroupName" name="GroupName" class="span11" placeholder="Add Group" />

                                            </div>
                                        </div>
                                        <br />
                                        <div class="form-control">
                                            <button type="button" id="GroupBtn" class="btn btn-success" style="margin:15px">Save</button>
                                        </div>
                                    </fieldset>
                                </form>

                            </div>
                        </div>

                        <div id="Company" class="tab-pane">
                            <div class="widget-content nopadding">
                                <form class="form-horizontal">
                                    <fieldset id="CompanySubmitForm">
                                        <div class="control-group">
                                            <label class="control-label">Select Group</label>
                                            <div class="controls">

                                                @Html.DropDownList("GroupID", ViewBag.GroupLists as List<SelectListItem>)
                                            </div>
                                        </div>
                                        <div class="control-group">
                                            <label class="control-label">Add Company</label>
                                            <div class="controls">
                                                <input type="text" class="span11" name="CompanyName" placeholder="Add Company" />
                                            </div>
                                        </div>
                                        <br />
                                        <div class="form-actions">
                                            <button type="button" id="CompanyBtn" class="btn btn-success">Save</button>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $("#GroupBtn").click(function () {
            var data = $("#GroupSubmitForm").serialize();
            $.ajax({
                type: "Post",
                url: "/SupplierGroupSettings/SaveGroup",
                data: data,
                success: function (result) {
                    alert(result);
                    window.location.href = "/SupplierGroupSettings/GroupSettings";

                }
            })
        })
    </script>
    <script type="text/javascript">
        $("#CompanyBtn").click(function () {
            var data = $("#CompanySubmitForm").serialize();
            $.ajax({
                type: "Post",
                url: "/SupplierGroupSettings/SaveCompany",
                data: data,
                success: function (result) {
                    alert(result);
                    window.location.href = "/SupplierGroupSettings/GroupSettings";

                }
            })
        })
    </script>
}



