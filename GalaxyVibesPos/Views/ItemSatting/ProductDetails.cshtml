@model GalaxyVibesPos.Models.ProductDetails

@{
    ViewBag.Title = "ProductDetails";
    Layout = "~/Views/Shared/_mytemplate.cshtml";
}


<div id="content">
    <div id="content-header">
        <div id="breadcrumb">
            <a href="index.html" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="#" class="tip-bottom">Form elements</a> <a href="#" class="current">Item</a>
        </div>
    </div>
    <div class="container-fluid">
        <hr />
        <div class="row-fluid">
            <div class="span6">
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"> <i class="icon-align-justify"></i> </span>
                        <h5>Details</h5>
                    </div>
                    <div class="widget-content nopadding">

                        <dl class="dl-horizontal">
                            <dt style="font-weight:normal">
                                @*@Html.DisplayNameFor(model => model.CategoryMain.MaincategoryName)*@
                                @Html.DisplayName("Main Category :")
                            </dt>
                            
                            <dd>
                                @Html.DisplayFor(model => model.CategoryMain.MaincategoryName)
                            </dd>
                           
                            <dt style="font-weight:normal">
                                @Html.DisplayName("Category :")
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Category.CategoryName)
                            </dd>
                            
                            <dt style="font-weight:normal">
                                @Html.DisplayName("Sub Category :")
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.CategorySub.SubCategoryName)
                            </dd>
                            <dt style="font-weight:normal">
                                @Html.DisplayName("Product :")
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.ProductName)
                            </dd>
                            <dt style="font-weight:normal">
                                @Html.DisplayNameFor(model => model.PurchasePrice)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.PurchasePrice)
                            </dd>
                            <dt style="font-weight:normal">
                                @Html.DisplayNameFor(model => model.SalePrice)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.SalePrice)
                            </dd>
                            <dt style="font-weight:normal">
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                            <dt style="font-weight:normal">
                                @Html.DisplayNameFor(model => model.MinimumProductQuantity)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.MinimumProductQuantity)
                            </dd>
                            <dt>
                                <br />
                            </dt>
                            <dd>
                                <br />
                            </dd>


                        </dl>
                        <p>
                            <div style="margin-left:5px;font-size:.90em; color:blue">
                                @Html.ActionLink("Back to List", "ProductIndex")
                            </div>
                            <div style="margin-left:5px;font-size:.90em; color:blue">
                                @Html.ActionLink("Edit", "ProductEdit", new { id = Model.ProductDetailsID })
                            </div>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

