@model GalaxyVibesPos.Models.CategorySub

@{
    ViewBag.Title = "SubCategoryEdit";
    Layout = "~/Views/Shared/_mytemplate.cshtml";
}

<div id="content">
    <div id="content-header">
        <div id="breadcrumb">
            <a href="index.html" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="#" class="tip-bottom">Form elements</a> <a href="#" class="current">Item</a>
        </div>
    </div>
    <div class="container-fluid">
        <hr />
        <div class="row-fluid">
            <div class="span6">
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"> <i class="icon-align-justify"></i> </span>
                        <h5>Category Edit</h5>
                    </div>
                    <div class="widget-content nopadding">
                        <form class="form-horizontal">
                            <fieldset id="subCategorySubmitForm">
                                <div class="control-group">
                                    <br />
                                    @Html.HiddenFor(model => model.SubCategoryID)
                                    @*<label class="control-label">Select Main category</label>
                                        <div class="controls">

                                            @Html.DropDownList("MainCategoryID", String.Empty)
                                        </div>*@
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Sub Category:</label>
                                    <div class="controls">

                                        @Html.EditorFor(model => model.SubCategoryName)
                                    </div>
                                </div>
                                <br />
                                <div class="form-actions">
                                    <button type="button" id="SubCategoryBtn" class="btn btn-success">Save</button>
                                </div>
                            </fieldset>
                        </form>

                        <div>
                            @Html.ActionLink("Back to List", "SubCategoryIndex")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    @*.........   Save Sub Category   ........*@
  <script>
      $("#SubCategoryBtn").click(function () {
        var data = $("#subCategorySubmitForm").serialize();
        $.ajax({
            type: "Post",
            url: "/ItemSatting/SaveSubCategoryInDatabase",
            data: data,
            success: function (result) {
                alert(result);
                window.location.href = "/ItemSatting/SubCategoryIndex";


            }
        })
    })
</script>

}
